{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for shell access",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/my-sidecar",
          "sidecar": true,
          "args": true
        },
        {
          "name": "echo",
          "cmd": "echo",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-open",
      "allow": [
        {
          "href": "^https://.*"
        }
      ]
    }
  ]
}
