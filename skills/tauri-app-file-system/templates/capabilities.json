{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for File System",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APP_DATA/*"
        },
        {
          "path": "$RESOURCE/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APP_DATA/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$APP_DATA"
        },
        {
          "path": "$RESOURCE"
        }
      ]
    }
  ]
}
