{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for Persistent Store",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "store:default",
    {
      "identifier": "store:allow-get",
      "allow": [
        {
          "path": "settings.json"
        }
      ]
    },
    {
      "identifier": "store:allow-set",
      "allow": [
        {
          "path": "settings.json"
        }
      ]
    },
    {
      "identifier": "store:allow-save",
      "allow": [
        {
          "path": "settings.json"
        }
      ]
    }
  ]
}
